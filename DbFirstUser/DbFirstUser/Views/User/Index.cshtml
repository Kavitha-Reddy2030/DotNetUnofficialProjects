@{
}
@model IEnumerable<User>

<h2>User List</h2>

<table class="table">
    <thead>
        <tr>
            <th>UserID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>User Name</th>
            <th>Created By</th>
            <th>Created Date</th>
            <th>Active</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.UserName</td>
                <td>@user.CreatedBy</td>
                <td>@user.CreatedDate</td>
                <td>@user.Active</td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "User")" class="btn btn-primary">Add User</a>
