@model WebApplication2.Models.EmployeeViewModel

<h2>Add Employee</h2>

<form asp-action="AddEmployee" method="post">
    <div class="form-group">
        <label for="EmployeeName">Name</label>
        <input type="text" asp-for="EmployeeName" class="form-control" />
        <span asp-validation-for="EmployeeName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="EmployeeAge">Age</label>
        <input type="text" asp-for="EmployeeAge" class="form-control" />
        <span asp-validation-for="EmployeeAge" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Employee</button>
</form>
