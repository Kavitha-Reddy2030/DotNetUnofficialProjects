@{
}
@model List<WebApplication2.Models.EmployeeViewModel>

<h2>Employee List</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Age</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.EmployeeName</td>
                <td>@employee.EmployeeAge</td>
                <td>
                    <a asp-action="UpdateEmployee" asp-route-id="@employee.Id" class="btn btn-warning">Edit</a> |
                    <form asp-action="DeleteEmployee" asp-route-id="@employee.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="AddEmployee" class="btn btn-primary">Add New Employee</a>
